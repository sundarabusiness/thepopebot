# GOAT Autopilot Environment Configuration
# Copy this to .env and fill in your credentials

# Application
NODE_ENV=production
APP_URL=http://100.111.3.59:8877

# Authentication
AUTH_SECRET=your-secret-key-here-min-32-chars-generated-by-setup
DATABASE_PATH=/opt/goat/state/thepopebot.sqlite

# GitHub Integration (Required)
GH_TOKEN=ghp_your_github_personal_access_token_here
GH_OWNER=sundarabusiness
GH_REPO=thepopebot

# LLM Provider (Anthropic recommended, can use local Ollama)
LLM_PROVIDER=anthropic
LLM_MODEL=claude-opus-4-6
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# OR for local Ollama:
# OPENAI_BASE_URL=http://localhost:11434/v1
# OPENAI_API_KEY=sk-fake-key

# Telegram (Optional â€” for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# GitHub Webhook Security
GH_WEBHOOK_SECRET=your_github_webhook_secret_here

# Trust Host (set to true if behind reverse proxy like Traefik)
AUTH_TRUST_HOST=true

# GOAT-Specific Configuration
GOAT_STATE_DIR=/opt/goat/state
GOAT_CONFIG_DIR=/opt/goat/config
GOAT_LOG_DIR=/opt/goat/logs
VPS_URL=http://100.111.3.59
COWORK_SERVER_URL=http://100.111.3.59:8877
MISSION_CONTROL_URL=http://100.111.3.59:8888
